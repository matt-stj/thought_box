<!DOCTYPE html>
<html>
<head>
  <title>ThoughtBox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="Links">

  <%= render 'shared/nav' %>

  <% flash.each do |type, msg| %>
    <%= content_tag :div, sanitize(msg), class: "flash_#{type} hidden" %>
      <body onload="Materialize.toast('<%=msg%>', 2000)">
  <% end %>

<div class="page-container container" ng-controller="LinksCtrl">
  <%= yield %>
</div>

</body>
</html>
